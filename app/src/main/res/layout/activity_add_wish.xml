<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_wish"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kahyalar.midtermproject.question1.AddWishActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Title.."
        android:ems="10"
        android:id="@+id/wishTitle"
        android:padding="15dp"
        android:background="#33f2a9"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textAlignment="center"/>

    <EditText
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:inputType="textMultiLine"
        android:ems="15"
        android:id="@+id/wishText"
        android:hint="Add New Wish.."
        android:textAlignment="center"
        android:background="#2ba172"/>

    <Button
        android:layout_marginTop="20dp"
        android:text="Kaydet.."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSaveWish"
        android:layout_gravity="center"/>

</LinearLayout>
